# Normalize line endings across different operating systems
* text=auto

# Source code
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf

# JSON and configuration files
*.json text eol=lf
*.jsonc text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf

# Markdown and documentation
*.md text eol=lf
*.mdx text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

# Docker
Dockerfile text eol=lf
.dockerignore text eol=lf
docker-compose*.yml text eol=lf

# CI/CD
.github/**/* text eol=lf

# Config files
.editorconfig text eol=lf
.prettierrc text eol=lf
.prettierignore text eol=lf
.eslintrc* text eol=lf
.npmrc text eol=lf
.nvmrc text eol=lf

# Exclude from exports
*.log export-ignore
*.tsbuildinfo export-ignore
coverage/ export-ignore
node_modules/ export-ignore
.github/ export-ignore
tests/ export-ignore
*.test.* export-ignore
.vscode/ export-ignore
.idea/ export-ignore
.DS_Store export-ignore

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
