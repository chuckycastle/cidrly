# Lockfile version
package-lock=true

# Save exact versions
save-exact=false
save-prefix=^

# Audit security
audit=true
audit-level=moderate

# Engine strict mode
engine-strict=true

# Progress indicator
progress=true

# Update notifier
update-notifier=true

# Logging
loglevel=warn

# Cache
cache=/Users/chuckycastle/.npm

# Production/Optional Dependencies
# Use CLI flags instead of config file:
#   npm install --omit=dev       (production mode)
#   npm install --omit=optional  (exclude optional deps)
#   npm install --include=optional (default: includes optional deps)

# Registry configuration (uncomment and set as needed)
# registry=https://registry.npmjs.org/
# @your-scope:registry=https://your-private-registry.com/

# Installation behavior
prefer-offline=false
prefer-online=false

# Package resolution
legacy-peer-deps=false
strict-peer-deps=false

# Workspace configuration (if using workspaces)
# workspaces=true

# CI-specific settings (automatically detected)
# ci=true when detected
